<div class="container mx-auto p-4 max-w-3xl">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-700">Edit Produk</h1>
        <div class="flex space-x-2">
            <a href="/produk/list" class="flex items-center text-blue-500 hover:text-blue-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Kembali
            </a>
        </div>
    </div>

    <% if (locals.error) { %>
    <div class="bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded mb-4"><%= error %></div>
    <% } %>

    <% if (product) { %>
        <div class="bg-white p-6 rounded-lg shadow-md">
            <form action="/produk/edit/<%= product.id %>" method="POST">
                <div class="mb-4">
                    <label for="nama" class="block text-sm font-medium text-gray-600 mb-1">Nama Produk:</label>
                    <input type="text" id="nama" name="nama" value="<%= product.nama %>" required class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" />
                </div>
                <div class="mb-4">
                    <label for="jenis" class="block text-sm font-medium text-gray-600 mb-1">Jenis Produk:</label>
                    <select id="jenis" name="jenis" required class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="">-- Pilih Jenis --</option>
                        <option value="Ebook" <%= product.jenis === 'Ebook' ? 'selected' : '' %>>Ebook</option>
                        <option value="Kelas Online" <%= product.jenis === 'Kelas Online' ? 'selected' : '' %>>Kelas Online</option>
                        <option value="Template" <%= product.jenis === 'Template' ? 'selected' : '' %>>Template</option>
                        <option value="Lainnya" <%= product.jenis === 'Lainnya' ? 'selected' : '' %>>Lainnya</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label for="deskripsi" class="block text-sm font-medium text-gray-600 mb-1">Deskripsi:</label>
                    <textarea id="deskripsi" name="deskripsi" class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 h-24"><%= product.deskripsi || '' %></textarea>
                </div>
                <div class="mb-4">
                    <label for="link" class="block text-sm font-medium text-gray-600 mb-1">Link Produk:</label>
                    <input type="text" id="link" name="link" value="<%= product.link || '' %>" placeholder="https://example.com/link-produk" class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" />
                </div>
                <div class="mb-4">
                    <label for="harga" class="block text-sm font-medium text-gray-600 mb-1">Harga (Rp):</label>
                    <input type="number" id="harga" name="harga" value="<%= product.harga || 0 %>" placeholder="0" class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" />
                </div>
                <div class="flex justify-end space-x-3">
                    <a href="/produk/detail/<%= product.id %>" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-6 rounded-md transition duration-200 ease-in-out">
                        Batal
                    </a>
                    <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-6 rounded-md transition duration-200 ease-in-out">
                        Simpan Perubahan
                    </button>
                </div>
            </form>
        </div>
    <% } else { %>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Produk tidak ditemukan</h3>
            <p class="mt-1 text-sm text-gray-500">Produk yang Anda cari tidak tersedia atau telah dihapus.</p>
            <div class="mt-6">
                <a href="/produk/list" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Kembali ke Daftar Produk
                </a>
            </div>
        </div>
    <% } %>
</div>