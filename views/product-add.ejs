<div class="container mx-auto p-4 max-w-3xl">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-700">Tambah Produk Baru</h1>
    <a
      href="/produk"
      class="flex items-center text-blue-500 hover:text-blue-700"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 mr-1"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
          clip-rule="evenodd"
        />
      </svg>
      Kembali
    </a>
  </div>

  <% if (locals.error) { %>
  <div
    class="bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded mb-4"
  >
    <%= error %>
  </div>
  <% } %>

  <div class="bg-white p-6 rounded-lg shadow-md">
    <form action="/produk/tambah" method="POST">
      <div class="mb-4">
        <label for="nama" class="block text-sm font-medium text-gray-600 mb-1"
          >Nama Produk:</label
        >
        <input
          type="text"
          id="nama"
          name="nama"
          required
          class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
        />
      </div>
      <div class="mb-4">
        <label for="jenis" class="block text-sm font-medium text-gray-600 mb-1"
          >Jenis Produk:</label
        >
        <select
          id="jenis"
          name="jenis"
          required
          class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
        >
          <option value="">-- Pilih Jenis --</option>
          <option value="Ebook">Ebook</option>
          <option value="Kelas Online">Kelas Online</option>
          <option value="Template">Template</option>
          <option value="Lainnya">Lainnya</option>
        </select>
      </div>
      <div class="mb-4">
        <label
          for="deskripsi"
          class="block text-sm font-medium text-gray-600 mb-1"
          >Deskripsi:</label
        >
        <textarea
          id="deskripsi"
          name="deskripsi"
          class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 h-24"
        ></textarea>
      </div>
      <div class="mb-4">
        <label for="link" class="block text-sm font-medium text-gray-600 mb-1"
          >Link Produk:</label
        >
        <input
          type="text"
          id="link"
          name="link"
          placeholder="https://example.com/link-produk"
          class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
        />
      </div>
      <div class="mb-4">
        <label for="harga" class="block text-sm font-medium text-gray-600 mb-1"
          >Harga (Rp):</label
        >
        <input
          type="number"
          id="harga"
          name="harga"
          placeholder="0"
          class="w-full p-3 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
        />
      </div>
      <div class="flex justify-end">
        <button
          type="submit"
          class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-md transition duration-200 ease-in-out"
        >
          Simpan Produk
        </button>
      </div>
    </form>
  </div>
</div>
